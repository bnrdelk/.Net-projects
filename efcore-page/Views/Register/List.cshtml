@model IEnumerable<InternshipRegister>

    @{
        ViewData["Ttle"] = "Staj Kayıt Listesi";
    }
    
    <h2 class="p-3" style="text-align: center; color: rgb(76, 169, 171);">Staj Kayıt Listesi</h2>
    <table class="table">
        <thead>
            <tr>
                <th style="width: 350pt;">@Html.DisplayNameFor(r => r.RecordId)</th>
                <th style="width: 350pt;">@Html.DisplayNameFor(r => r.Student.StudentFullName)</th>
                <th style="width: 350pt;">@Html.DisplayNameFor(r => r.InternshipPlace.Title)</th>
                <th style="width: 150pt;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var r in Model)
            {
                <tr>
                    <th>@Html.DisplayFor(register => r.RecordId)</th>
                    <th>@Html.DisplayFor(register => r.Student.StudentFullName)</th>
                    <th>@Html.DisplayFor(register => r.InternshipPlace.Title)</th>
                    <td>
                        <a asp-controller="Register" asp-action="Edit" asp-route-id="@r.RecordId" class="btn btn-sm btn-info">Düzenle</a>
                        <a asp-controller="Register" asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@r.RecordId" >Kayıt Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

        