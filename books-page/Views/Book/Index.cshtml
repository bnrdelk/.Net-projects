@model BookViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Book</title>
</head>
<body>
    <header>
        <!-- navbar-expand-sm: expands navbar in small screens like mobiles-->
       <nav class="navbar navbar-expand-sm navbar-dark bg-secondary">
            <div class="container">
                <a href="#" class="navbar-brand"> Books App </a>
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"> 
                        <a href="#" class="nav-link"> Home </a>    
                    </li>
                    <li class="nav-item"> 
                        <a href="/book/list" class="nav-link"> Book List </a>    
                    </li>
                </ul>
            </div>
       </nav>
    </header>
    
    <div class="container mt-3">
        <main>
                <div id="book_@Model.Id" class="card p-4">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="~/img/@Model.Image" width="250" height="300" alt="@Model.Name's Book Cover">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@Model.Name</h5>
                                <h6 class="card-text">@Model.Author</h6>
                                <p class="card-text"><em>@Model.Description</em></p>
                            </div>
                            
                        </div>
                    </div>
                </div>
        </main>
    </div>
   
</body>
</html>