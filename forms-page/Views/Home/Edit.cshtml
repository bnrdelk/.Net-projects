@model Product
@{
    ViewData["Title"] = "Create Product";
}

<form asp-action="Edit" asp-controller="Home" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for = "ProductId"> <!-- !!asp-for ile bilgiyi eşle gönder!! -->
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control">
    </div>
    <div>
        <img src="~/img/@Model.Image" alt="Product Image" style="width: 100pt; height: 150pt" class="mb-3">
        <input type="hidden" asp-for="@Model.Image"> <!-- !!asp-for!! -->
    </div>
    <div class="input-group mb-3">
        <input type="file" name="imageFile" id="imageFile" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label"></label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
            <option value="0">All</option>
        </select>
    </div>
    <div class="mb-3 form-check">
        <input asp-for="IsInStock" class="form-check-input">
        <label asp-for="IsInStock" class="form-check-label"></label>
    </div>
    <button class="btn btn-success" type="submit">Save</button>
</form>