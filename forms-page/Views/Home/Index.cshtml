@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

<table class="table table-bordered table-info table-striped">
    <thead>
        <tr>
            <th> @Html.DisplayNameFor(p => p.ProductId) </th>
            <th> @Html.DisplayNameFor(p => p.Image) </th>
            <th> @Html.DisplayNameFor(p => p.Name) </th>
            <th> @Html.DisplayNameFor(p => p.Price) </th>
            <th>  </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var p in @Model)
        {
            <tr>
                <td> @p.ProductId </td>
                <td>
                    <img src="~/img/@p.Image" class="p-2" height="200pt" width="150pt" >
                </td>
                <td> @p.Name </td>
                <td> @p.Price </td>
                <td>
                    <a href="" class="btn btn-sm btn-outline-info">Edit</a>
                    <a href="" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
